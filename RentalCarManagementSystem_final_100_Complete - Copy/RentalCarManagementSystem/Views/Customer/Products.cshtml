@{
    ViewData["Title"] = "Products";
}
@model List<Car>
<style>
    .btn {
        background-color: #06141B;
        border: none;
        color: white;
    }

    .card {
        background-color: #9BA8AB;
        border: 2px solid #06141B;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.15);
    }

    }
</style>

<div class="container mt-4">
    <h1>Available Cars for Rent</h1>

    <div class="row mt-4">
        @foreach (var car in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="@car.ImageURL" class="card-img-top" alt="Car Image" style="height: 200px; object-fit: cover;" alt="Car Image">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@car.Model</h5>
                        <p class="card-text flex-grow-1">@car.Description</p>
                        <p><strong>Price: Rs.@car.PricePerDay/day</strong></p>

                        <a href="@Url.Action("BookCar", "Customer", new { id = car.Id })" class="btn btn-primary">Book Now</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


<a href="@Url.Action("Dashboard", "Customer")" class="btn btn-primary mt-4 mb-4">Back to Dashboard</a>
