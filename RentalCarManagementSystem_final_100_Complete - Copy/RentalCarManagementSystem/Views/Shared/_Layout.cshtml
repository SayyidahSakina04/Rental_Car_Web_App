@using Microsoft.AspNetCore.Identity
@using RentalCarManagementSystem.Models
@inject SignInManager<RentalCarManagementSystem.Models.MyUser> SignInManager
@inject UserManager<RentalCarManagementSystem.Models.MyUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        html, body {
            height: 100%;
            margin: 0;
            display: flex;
            flex-direction: column;
            background-color: #4A5C6A;
            color: #06141B;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .navbar {
            background-color: #11212D !important;
        }

            .navbar .nav-link {
                color: #f0f0f0 !important;
            }

                .navbar .nav-link:hover {
                    color: #9BA8AB !important;
                }

        footer {
            background-color: #06141B;
            color: #CCD0CF;
            text-align: center;
            padding: 20px 0;
            margin-top: auto;
        }

        .content-wrapper {
            flex-grow: 1;
        }
    </style>

</head>

<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
<script>
    const connection = new signalR.HubConnectionBuilder()
        .withUrl("/notificationHub")
        .build();
    // car ko edit ya add ya delete krne k baad
    connection.on("CarListUpdated", () => {
        if (window.location.pathname.includes("/Customer/Products") || window.location.pathname.includes("/Admin/Products")) {
            location.reload();
        }
    });

    // booking status change krne k baad
    connection.on("BookingStatusChanged", () => {
        if (window.location.pathname.includes("/Customer/Dashboard")) {
            location.reload();
        }
    });

    // car return hogyi to admin ko nazar ajaye
    connection.on("ActiveRentalsUpdated", () => {
        if (window.location.pathname.includes("/Admin/ActiveRentals")) {
            location.reload();
        }
    });

    // booking confirm krne k baad admin ko real time show
    connection.on("ManageApprovalsUpdate", () => {
        if (window.location.pathname.includes("/Admin/PendingApprovals")) {
            location.reload();
        }
    });

    connection.start().catch(err => console.error(err.toString()));
</script>



<body>

    @{
        var user = await UserManager.GetUserAsync(User);
        var role = user?.role;
    }
    <!-- Header/Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        @if (role == "Admin")
        {
            <a class="navbar-brand" href="@Url.Action("Dashboard", "Admin")">PUCIT CAR RENTALS</a>
        }
        else if (role == "Customer")
        {
            <a class="navbar-brand" href="@Url.Action("Dashboard", "Admin")">PUCIT CAR RENTALS</a>
        }
        else{
                <a class="navbar-brand" >PUCIT CAR RENTALS</a>
        }

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                @if (role == "Admin")
                {
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Dashboard", "Admin")">Home</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Dashboard", "Customer")">Home</a>
                    </li>
                }
                @if (role == "Admin")
                {
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Products", "Admin")">Products</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Products", "Customer")">Products</a>
                    </li>
                }

                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("AboutUs", "Home")">About Us</a>
                </li>
                @if (role == "Admin")
                {
                    <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("ContactUsMessages", "Admin")">Contact Us</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("ContactUs", "Customer")">Conatct Us</a>
                    </li>
                }

                @if (SignInManager.IsSignedIn(User))
                {
                    <li class="nav-item">
                        <a class="nav-link text-light">Hello, @User.Identity.Name</a>
                    </li>
                    <li class="nav-item">
                        <form method="post" asp-area="Identity" asp-page="/Account/Logout">
                            <button type="submit" class="nav-link btn btn-link text-light">Logout</button>
                        </form>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
                    </li>
                }
            </ul>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mt-4 content-wrapper">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer>
        <p>&copy; 2025 PUCIT CAR RENTALS. All Rights Reserved.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
