@model RentalCarManagementSystem.Models.Car
@{
    ViewData["Title"] = "Confirm Delete";
}

<div class="container mt-4">
    <h2>Confirm Deletion</h2>
    <p>Are you sure you want to delete the following car?</p>

    <div class="card mb-4" style="width: 300px;">
        <img src="@Model.ImageURL" class="card-img-top" style="height: 180px; object-fit: cover;" />
        <div class="card-body">
            <h5 class="card-title">@Model.Model</h5>
            <p class="card-text">@Model.Description</p>
            <p><strong>Price: Rs.@Model.PricePerDay/day</strong></p>
        </div>
    </div>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-dark mb-3">Yes, Delete</button>
        <a asp-action="Products" class="btn btn-secondary mb-3">Cancel</a>
    </form>
</div>
