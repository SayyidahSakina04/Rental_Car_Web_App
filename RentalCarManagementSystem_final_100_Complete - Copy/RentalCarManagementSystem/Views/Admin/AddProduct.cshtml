@model Car

@{
    ViewData["Title"] = "Add New Car";
}

<style>
    body{
        color: white
    }

    .btn {
        background-color: #11212D
        color(white)

    }
</style>

<h2>Add New Car</h2>

<form asp-action="AddProduct" method="post">
    <div class="form-group">
        <label asp-for="Model"></label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PricePerDay"></label>
        <input asp-for="PricePerDay" class="form-control" />
        <span asp-validation-for="PricePerDay" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImageURL"></label>
        <input asp-for="ImageURL" class="form-control" />
        <span asp-validation-for="ImageURL" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-dark mb-3" id="btnNewCar">Add Car</button>

</form>

<a href="@Url.Action("Dashboard", "Admin")" class="btn btn-dark mt-4 mb-4">
    Back to Dashboard
</a>

@section Scripts { 
     <partial name="_ValidationScriptsPartial" /> 
}
