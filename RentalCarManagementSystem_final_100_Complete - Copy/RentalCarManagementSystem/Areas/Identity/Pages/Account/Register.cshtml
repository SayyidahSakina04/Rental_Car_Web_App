@page
@model RegisterModel
@{
    ViewData["Title"] = "Sign Up";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f7fc;
        }

        .row {
            height: 100vh;
        }

        .left-side {
            background-color: #343a40;
            color: white;
            padding: 60px 40px;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
        }

        .right-side {
            padding: 40px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .form-container {
            width: 100%;
            max-width: 400px;
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

            .form-container h2 {
                font-size: 24px;
                margin-bottom: 20px;
            }

            .form-container p {
                font-size: 16px;
                margin-bottom: 30px;
                color: #888;
            }

        .btn-primary {
            background-color: #343a40;
            border: none;
            padding: 12px;
            width: 100%;
            font-size: 18px;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <div class="container-fluid mb-4">
        <div class="row">
            <!-- Left side -->
            <div class="col-md-6 left-side">
                <div>
                    <h1>Come join us!</h1>
                    <p>We are so excited to have you here! If you haven’t already, create an account to get access to exclusive offers, rewards, and discounts.</p>
                    <p>Already have an account? <a href="@Url.Page("./Login", new { ReturnUrl = Model.ReturnUrl })" class="text-light">Sign In</a></p>
                </div>
            </div>

            <!-- Right side -->
            <div class="col-md-6 right-side">
                <div class="form-container">
                    <h2>Sign Up</h2>

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.ConfirmPassword"></label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="Role">Role: Customer</label>
                            <input name="Input.Role" type="hidden" value="Customer" />

                            
                            <span asp-validation-for="Input.Role" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="Country">Country</label>
                            <input asp-for="Input.Country" class="form-control"/>
                            <span asp-validation-for="Input.Country" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Sign Up</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <partial name="_ValidationScriptsPartial" />
</body>
</html>
